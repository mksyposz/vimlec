syntax enable

set noerrorbells
set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab
set smartindent
set number relativenumber
set nowrap
set smartcase
set incsearch
set noshowmode
set laststatus=2
set splitbelow
set splitright
set inccommand=nosplit

set colorcolumn=80
autocmd Filetype tex setlocal colorcolumn=90
set background=dark

if (has("termguicolors"))
  set termguicolors
endif

colorscheme OceanicNext

